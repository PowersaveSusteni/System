@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model Susteni.Models.HelpDesk.HelpDeskModel

<form id="helpdeskBilde" onsubmit="return false;" method="post" class="mt-0">

    <input type="hidden" asp-for="HelpDeskBilde.HelpDeskBildeGuid" class="form-control">
    <input type="hidden" asp-for="HelpDeskBilde.HelpDeskGuid" class="form-control">
    <input hidden asp-for="HelpDeskBilde.Bilde" class="form-control">

    <div class="col-12">
        <div class="panel with-nav-tabs panel-default" id="dataenter">
            <div class="panel-body data" style="padding: 10px;">

                <div class="row align-items-center">
                    <label class="col-1">Type</label>
                    <div class="col-2">
                        @(Html.Kendo().DropDownList()
                            .Name("HelpDeskBilde.TypeBilde")
                            .DataTextField("Text")
                            .DataValueField("Value")
                            .OptionLabel("Velg fra listen...")
                            .OptionLabelTemplate("<span><i>Velg fra listen...</i></span>")
                            .BindTo(new List<SelectListItem>() {
                                new SelectListItem() {
                                Text = Localizer["Intern"].Value , Value = "0"
                                },
                                new SelectListItem() {
                                Text = Localizer["Svar"].Value, Value = "2"
                                }
                                })
                            .Value(Model.HelpDeskBilde.TypeBilde.ToString())
                            .HtmlAttributes(new { style = "width: 100%;" })
                            )
                    </div>
                </div>
                <div class="row" style="margin-top: 10px;">
                    <div class="col-md-12">
                        @(Html.Kendo().TextArea()
                            .Name("HelpDeskBilde.Kommentar")
                            .Value(Model.HelpDeskBilde.Kommentar)
                            .Rows(10)
                            .MaxLength(4000)
                            .HtmlAttributes(new { style = "width: 100%", required = true, data_required_msg = "Please enter a text.", data_max_msg = "Enter value between 1 and 4000" })
                            )
                    </div>
                </div>

            </div>
        </div>
    </div>

</form>