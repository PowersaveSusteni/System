@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model Susteni.Models.HelpDesk.HelpDeskModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = Localizer["Helpdesk"];
    ViewData["LogOnOk"] = "2";
    ViewData["Menu"] = "Helpdesk";
}


<form controller="helpdesk" id="Helpdesk" onsubmit="return false;" method="post" class="mt-0">

    <div class="row">
        <div class="col-lg-12">
            <button type="button" id="btnSkrivBrev" class="commandSmal" onclick="LagreTickets(false)" style="width: 130px;">
                @Localizer["Lagre"]
                <img src="~/images/lagre.svg" style="width: 24px; height: 24px;" />
            </button>

            <button type="button" id="btnSkrivBrev" class="commandSmal" onclick="LagreTickets(true)" style="width: 160px;">
                @Localizer["Lagre og lukk"]
                <img src="~/images/lagre.svg" style="width: 24px; height: 24px;" />
            </button>

            <button type="button" class="commandSmal" onclick="slettTickets()" style="width: 160px; margin-left: 10px;">
            @Localizer["Slette"]
            <img src="~/images/trash-2.svg" style="width: 24px; height: 24px; " />
            </button>

        </div>

    </div>

    <partial name="_HelpDeskInfo" />

</form>

