@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<form action="Lagre" id="fromGravarkivBilde" method="post" class="mt-3">
    <div class="form-group row" style="margin-top: 20px;">

        <div class="col-lg-4" style="margin-left: 20px;" id="tips">
            <p class="unselectable">
                To upload a photo, press the button in the gray area.
            </p>

        </div>

        <div class="col-lg-1">
        </div>

        <div class="col-lg-6">

            @(Html.Kendo().Upload()
                .Name("files")
                .Async(a => a
                    .SaveUrl(Url.Action("Async_SavePicture", "Upload"))
                    .AutoUpload(true)
                    )
                .Events(e => e
                    .Upload("onUploadLogo").Complete("onUploadSuccess")
                    ) 
                )
        </div>

    </div>
</form>

<style>
    p {
        font-size: 14px;
    }
</style>

