@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer
@model Susteni.Models.Ship.ShipModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


<form id="heatPowerGeneratorForm">
    <input hidden asp-for="ShipGeneratorHeatUnit.ShipGuid" class="form-control k-textbox">
    <input hidden asp-for="ShipGeneratorHeatUnit.HeatUnitGuid" class="form-control k-textbox">

    <div class="col-12" style="margin-bottom: 0px; margin-top: 10px;">
        <div class="panel with-nav-tabs panel-default" id="dataenter">
            <div class="panel-body data padding-0">
                <div class="tab-content data">
                    <div class="panel-heading" id="Tab">
                        <ul class="nav nav-tabs">
                            <li class="nav-item"><a class="nav-link active" aria-current="page" href="#tabInfo" data-bs-toggle="tab">@Localizer["Info"]</a></li>
                        </ul>
                    </div>
                    <div class="panel-body">
                        <div class="tab-content" style="margin-top: 10px;">
                            <div class="tab-pane fade show active" style="padding: 10px;" role="tabpanel" id="tabInfo">

                                <div class="row">
                                    <div class="col-12">

                                        <div class="row align-items-center" style="display: flex; flex-direction: row;">
                                            <label class="col-3 col-form-label">Name</label>
                                            <div class="col-8">
                                                <input asp-for="ShipGeneratorHeatUnit.Name" class="form-control k-textbox">
                                            </div>
                                        </div>

                                        <div class="row align-items-center" style="display: flex; flex-direction: row;">
                                            <Label class="col-3 col-form-label">@Localizer["kW"]</label>
                                            <div class="col-3">
                                                @(Html.Kendo().NumericTextBox<double>()
                                                    .Name("ShipGeneratorHeatUnit.kW")
                                                    .Format("####.00")
                                                    .Min(0)
                                                    .Max(9999)
                                                    .Value(Model.ShipGeneratorHeatUnit.kW)
                                                    .HtmlAttributes(new { style = "width: 100%"})
                                                )
                                            </div>
                                        </div>

                                        <div class="row align-items-center" style="display: flex; flex-direction: row;">
                                            <Label class="col-3 col-form-label">@Localizer["Hour pr. day"]</label>
                                            <div class="col-3">
                                                @(Html.Kendo().NumericTextBox<double>()
                                                    .Name("ShipGeneratorHeatUnit.HourPrday")
                                                    .Format("##")
                                                    .Min(0)
                                                    .Max(24)
                                                    .Value(Model.ShipGeneratorHeatUnit.HourPrday)
                                                    .HtmlAttributes(new { style = "width: 100%"})
                                                )
                                            </div>
                                        </div>

                                        <div class="row align-items-center" style="display: flex; flex-direction: row;">
                                            <Label class="col-3 col-form-label">@Localizer["Factor"]</label>
                                            <div class="col-3">
                                                @(Html.Kendo().NumericTextBox<double>()
                                                    .Name("ShipGeneratorHeatUnit.Factor")
                                                    .Format("##.00")
                                                    .Min(0)
                                                    .Max(100)
                                                    .Value(Model.ShipGeneratorHeatUnit.Factor)
                                                    .HtmlAttributes(new { style = "width: 100%"})
                                                )
                                            </div>
                                        </div>

                                    <div class="row align-items-center">
                                        <label class="col-3 col-form-label">Kg diesel/kWh</label>
                                        <div class="col-3">
                                            @(Html.Kendo().NumericTextBox<double>()
                                                .Name("ShipGeneratorHeatUnit.KgDieselkWh")
                                                .HtmlAttributes(new { @class = "nodvendigFelt" })
                                                .Format("#####.00")
                                                .Value(Model.ShipGeneratorHeatUnit.KgDieselkWh)
                                                )
                                        </div>
                                    </div>
@* 
                                    <div class="row align-items-center">
                                        <label class="col-5 col-form-label">Efficient motor to switchboard</label>
                                        <div class="col-3">
                                            @(Html.Kendo().NumericTextBox<double>()
                                                .Name("ShipGeneratorHeatUnit.EfficientMotorSwitchboard")
                                                .HtmlAttributes(new { @class = "nodvendigFelt" })
                                                .Format("#####.00")
                                                .Value(Model.ShipGeneratorHeatUnit.EfficientMotorSwitchboard)
                                                )
                                        </div>
                                    </div> *@

                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row" style="margin-top: 15px;">
            <div class="col-12">
                <button type="button" onclick="closeHeatPowerGenerator()" class="commandModernRed" style="width: 150px; float: right">Cancel</button>
                <button type="button" onclick="saveHeatPowerGenerator()" class="commandModernGreen" style="width: 150px; float: right">Save</button>
            </div>

        </div>
    </div>
</form>