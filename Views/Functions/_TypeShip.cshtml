@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer
@model Susteni.Models.Funksjoner.FunctionsModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<script>


    
    function saveShipType() {
        var $this = $('#shipTypeForm').serialize();

        $.ajax({
            url: '@Url.Action("SetTypeShip", "Functions")',
            type: "PUSH",
            data: $this,
            dataType: "json"
            })
        .done(function (result) {
            var popup = $('#dialogEquipment').data("kendoWindow");
            popup.close();
                $("#shipTypeList").data("kendoGrid").dataSource.read();
            });
        }

</script>

<form id="shipTypeForm">
    <div class="row">
        <div class="col-6">
            <button class="commandModernGreen" onclick="saveShipType()"><img src="@Url.Content("~/images/")lagre.svg" alt="Ja" width='24' height='24' />Save</button>
        </div> 
    </div>

    <div class="row">
        <div class="col-12" style="margin-bottom: 0px; margin-top: 10px;">
            <div class="panel with-nav-tabs panel-default" id="dataenter">
                <div class="panel-body data" style="padding: 10px;">

                    <div class="panel-body">

                        <input type="hidden" asp-for="TypeShip.ShipTypeGuid" class="form-control">
                        <div class="row align-items-center" style="display: flex; flex-direction: row;">
                            <label class="col-1 col-form-label">Name</label>
                            <div class="col-md-11">
                                <input asp-for="TypeShip.Name" class="form-control k-textbox">
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
        
    </div>
</form>